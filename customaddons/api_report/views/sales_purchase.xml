<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--        tree view-->
        <record model="ir.ui.view" id="sales_purchase_view_tree">
            <field name="name">sales.purchase.view.tree</field>
            <field name="model">sales.purchase</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sale_team_id"/>
                    <field name="real_revenue"/>
                    <field name="difference_between_revenue"/>
                    <field name="department_id"/>
                    <field name="spending_limit"/>
                    <field name="difference_between_spending"/>
                </tree>
            </field>
        </record>

        <!--        form view-->
        <record model="ir.ui.view" id="sales_purchase_view_form">
            <field name="name">sales.purchase.view.form</field>
            <field name="model">sales.purchase</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="sale_team_id"/>
                                <field name="real_revenue" readonly="1"/>
                                <field name="difference_between_revenue" readonly="1"/>

                            </group>
                            <group>
                                <field name="department_id"/>
                                <field name="spending_limit" readonly="1"/>
                                <field name="real_revenue_department" readonly="1"/>
                                <field name="difference_between_spending" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        actions-->
        <record model="ir.actions.act_window" id="sales_purchase_action">
            <field name="name">Sales Purchase</field>
            <field name="res_model">sales.purchase</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--        menu-->
        <menuitem id="sales_purchase_menu" name="API Report" action="sales_purchase_action"/>
    </data>
</odoo>