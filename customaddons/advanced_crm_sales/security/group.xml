<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="advanced_crm_sales_staff" model="ir.module.category">
            <field name="name">Advanced CRM Sales</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_staff_employee" model="res.groups">
            <field name="name">Employee</field>
            <field name="category_id" ref="advanced_crm_sales_staff"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        </record>

        <record id="group_staff_approver" model="res.groups">
            <field name="name">Approver</field>
            <field name="category_id" ref="advanced_crm_sales_staff"/>
            <field name="implied_ids" eval="[(4, ref('group_staff_employee'))]" />
        </record>

        <record id="group_staff_leader" model="res.groups">
            <field name="name">Leader</field>
            <field name="category_id" ref="advanced_crm_sales_staff"/>
            <field name="implied_ids" eval="[(4, ref('group_staff_employee'))]" />
        </record>

        <record id="group_staff_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="advanced_crm_sales_staff"/>
            <field name="implied_ids" eval="[(4, ref('group_staff_leader'))]" />
        </record>
    </data>
</odoo>