<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="detail_report_wizard_view" model="ir.ui.view">
        <field name="name">detail.report.wizard.view.form</field>
        <field name="model">detail.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Detail Report">
                <group>
                    <group>
                        <field name="month"/>
                    </group>
                    <group>
                        <field name="sales_team_id" widget="selection"/>
                    </group>
                </group>
                <footer>
                    <button string="Confirm" name="btn_confirm" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="detail_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Detail Report</field>
        <field name="res_model">detail.report.wizard</field>
        <field name="binding_model_id" ref="model_crm_lead"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="detail_report_wizard_view"/>
    </record>

    <menuitem id="menu_warranty_wizard" parent="crm.crm_menu_root" action="detail_report_wizard_action" sequence="20" />
</odoo>