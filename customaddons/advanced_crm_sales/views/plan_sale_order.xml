<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="plan_sale_order_view_form">
            <field name="name">plan.sale.order.view.form</field>
            <field name="model">plan.sale.order</field>
            <field name="arch" type="xml">
                <form name="Plan Sale Order">
                    <header>
                        <button name="btn_new" type="object" string="New" class="oe_highlight"
                                attrs="{'invisible': [('state', 'in', ('new', 'send', 'approve','refuse'))]}"
                                groups="advanced_crm_sales.group_staff_employee"/>
                        <button name="btn_send" type="object" string="Send" class="oe_highlight"
                                attrs="{'invisible':['|', ('state', 'in', ('send', 'approve','refuse')),
                                        ('is_send', '=', True)]}"
                                groups="advanced_crm_sales.group_staff_employee"/>
                        <button name="btn_approve_confirm" type="object" string="Approve" class="oe_highlight"
                                groups="advanced_crm_sales.group_staff_approver"
                                attrs="{'invisible': [('state', 'in', ('approve','refuse'))]}"/>
                        <button name="btn_refuse_confirm" type="object" string="Refuse" class="oe_highlight"
                                groups="advanced_crm_sales.group_staff_approver"
                                attrs="{'invisible': [('state', 'in', ('approve','refuse'))]}"/>

                        <field name="state" widget="statusbar"/>
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit-only"/>
                            <h1>
                                <field name="name" placeholder="Plan Sale Order Name"
                                       attrs="{'readonly': [('state', 'in', ('send','approve','refuse'))]}"/>
                            </h1>
                        </div>
                        <group>
                            <field name="quotation"
                                   attrs="{'readonly': [('state', 'in', ('send','approve','refuse'))]}"/>
                            <field name="content" attrs="{'readonly': [('state', 'in', ('send','approve','refuse'))]}"/>
                            <field name="is_send" invisible="1" readonly="0"/>
                        </group>
                        <notebook>
                            <page string="Approver List" name="approver_list_notes">
                                <field name="approver_id">
                                    <tree>
                                        <field name="approver"/>
                                        <field name="approval_status" string="Status"/>
                                        <button name="btn_approve" string="Approve" type="object" class="oe_highlight"
                                                groups="advanced_crm_sales.group_staff_approver"
                                                attrs="{'invisible': [('approval_status', 'in', ('refuse', 'approve'))]}"/>
                                        <button name="btn_refuse" string="Refuse" type="object" class="oe_highlight"
                                                groups="advanced_crm_sales.group_staff_approver"
                                                attrs="{'invisible': [('approval_status', 'in', ('refuse', 'approve'))]}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="plan_sale_order_view_tree" model="ir.ui.view">
            <field name="name">plan.sale.order.view.tree</field>
            <field name="model">plan.sale.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="quotation"/>
                    <field name="content"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="plan_sale_order_action">
            <field name="name">Plan Sale Order</field>
            <field name="res_model">plan.sale.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="plan_sale_order_menu" parent="sale.sale_menu_root" name="Plan Sale Order"
                  action="plan_sale_order_action"/>
    </data>
</odoo>