<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="s_crm_lead">
            <field name="name">crm.lead.form.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="sales_team_id"/>
                    <field name="check_edit" invisible="1"/>
                    <field name="minimum_revenue" widget="monetary"
                           attrs="{'readonly':[('check_edit','=','no')]}"/>
                </xpath>

            <!--Only assign opportunities to yourself or sales staff. Manager can sign for everyone-->
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="groups">advanced_crm_sales.group_staff_employee</attribute>
                </xpath>
            </field>
        </record> 
    </data>
</odoo>