<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="s_choice_department_form_view">
            <field name="name">s.choice.department.form</field>
            <field name="model">s.choice.department</field>
            <field name="arch" type="xml">
                <form string="Indicator Evaluation Report">
                    <group>
                        <group>
                            <field name="month"/>
                        </group>
                        <group>
                            <field name="department_id" widget="many2many_checkboxes"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Confirm" name="btn_confirm" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="s_choice_department_action" model="ir.actions.act_window">
            <field name="name">Indicator Evaluation Report</field>
            <field name="res_model">s.choice.department</field>
            <field name="binding_model_id" ref="model_hr_department"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="s_choice_department_form_view"/>
        </record>

<!--        Report for froup accountant-->
        <menuitem id="s_choice_department_menu" parent="hr.menu_hr_root" action="s_choice_department_action"
                  sequence="20" groups="advanced_purchase.group_staff_accountant"/>
    </data>
</odoo>